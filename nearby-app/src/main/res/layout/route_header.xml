<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:id="@+id/app_bar_linear_layout"
              android:background="@drawable/route_appbar_background">
    <ImageView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_white_24px"
            android:layout_weight="1"/>
    <TextView
            android:layout_width="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_height="wrap_content"
            android:id="@+id/route_bar_title"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/some_long_place_name" android:layout_weight="4"
            android:textColor="@color/colorText"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_height="wrap_content" android:paddingEnd="16dp">

        <ImageView
                android:id="@+id/btnDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_directions_walk_white_24px"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/routeTime"
                  android:text="34 min" android:layout_weight="1"
                  android:textColor="@android:color/white"
                  android:gravity="center_vertical|center_horizontal" android:paddingEnd="16dp"/>

    </LinearLayout>


</LinearLayout>